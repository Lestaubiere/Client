                  {
                    "value": "fam",
                    "label": "Fam."
                  },
                  {
                    "value": "dhr",
                    "label": "Dhr."
                  },
                  {
                    "value": "mevr",
                    "label": "Mevr."
                  }
                ]
              },
              {
                "name": "name",
                "label": "Naam",
                "type": "TYPE_TEXT",
                "required": true,
                "action": "setBookingName"
