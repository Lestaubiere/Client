                "type": "TYPE_SELECT",
                "required": true,
                "action": "setBookingEquipment",
                "options": [
                  {
                    "value": "tent",
                    "label": "Tent"
                  },
                  {
                    "value": "caravan",
                    "label": "Caravan"
                  },
                  {
                    "value": "vouwwagen",
                    "label": "vouwwagen"
                  },
                  {
                    "value": "camper",
                    "label": "Camper"
                  }
                ]
              },
              {
                "name": "electricity",
                "label": "Elektriciteit",
                "type": "TYPE_SELECT",
                "required": true,
                "action": "setBookingElectricity",
                "options": [
                  {
                    "value": "none",
                    "label": "Geen"
                  },
                  {
                    "value": "6",
                    "label": "6 Amp."
                  },
                  {
                    "value": "10",
                    "label": "10 Amp."
                  }
                ]
              }
            ]
